        <activity
            android:name=".EnglishActivity"
            android:label="User Manual"
            android:process=":process.english"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FrenchActivity"
            android:label="Manuel de l&apos;utilisateur"
            android:process=":process.french"
